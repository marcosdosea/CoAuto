@model List<CoAutoWeb.Models.VeiculoListagemViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<h3 style="margin-bottom:1rem">Encontre seu Veículo</h3>

<span>
    <strong>De</strong>
    <input type="datetime-local" style="border-radius:1rem" />
    <strong>Até</strong>
    <input type="datetime-local" style="border-radius:1rem;border-color:black" />
    <button type="button" class="btn btn-primary" style="border-radius:15px;width:6rem;">Pesquisar</button>
</span>

@foreach (var item in Model)
{
    <div class="card" style="width:15rem;background-color:#FFFAFA;margin-bottom:1rem;margin-top:2rem;border-radius:1rem;">
        <img src="@item.ImageUrl" style="border-radius:1rem" />
        <div class="card-body">
            <h5 class="card-title">@($"{item.NomeMarca} {item.NomeModelo} {item.Ano}")</h5>
            <p class="card-text">@($"{item.Bairro} {item.Cidade} {item.Estado}")</p>
            <p class="card-text"><small class="text-body-secondary" style="font-weight:700">R$ @item.Valor/Dia</small></p>
        </div>
    </div>
}

