@model CoAutoWeb.Models.BancoViewModel

<h1 style="color:dodgerblue">Editar um banco</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" style="border-radius:1rem" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" style="border-radius:1rem" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" style="border-radius:2rem;width:9rem;" />
            </div>
            <br />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="text-decoration:none">Retornar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
